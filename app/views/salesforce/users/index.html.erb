<h1>Listing users</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Accountid</th>
    <th>Username</th>
  </tr>

<% @salesforce_users.each do |user| %>
  <tr>
    <td><%=h user.id %></td>
    <td><%=h user.name %></td>
    <td><%=h user.email%></td>
    <td><%=h user.username %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_salesforce_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_salesforce_user_path %>