<body>
<table>
  <tr>
  	<% j =0 %>
  	
    <th>Select <%= check_box_tag 'dupsall' , 'toggle', false, :onclick => "toggleAll('accountselect');return true;" %></th> 
    <th>Account Name</th>
    <th>City </th>
    <th>Address</th>
    <th>Zipcode</th>
    <th>Phone Number </th>
    <th>PAR Id</th>
    <th>HQ/ Branch Office</th>
    <th>Worksite Status </th>
    
  </tr>
  <% i =0 %>
  <% @resp_acc.each do |acc| %>
  <tr></tr><tr></tr>
  	<% i= i+1 %>
